{% extends 'layout-admin.html.twig' %}

{% block breadcrumb %}Gerenciar Usuários{% endblock %}

{% block body %}
    <h3>Gerenciar Usuários</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Cpf</th>
                <th>Telefone Principal</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for pessoa in pessoas %}
            <tr>
                <td>{{ pessoa.id }}</td>
                <td>{{ pessoa.nome }}</td>
                <td>{{ pessoa.email }}</td>
                <td>{{ pessoa.cpf }}</td>
                <td>{{ pessoa.telefonePrincipal }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': pessoa.id}) }}">Visualizar</a>
                    <a href="{{ path('user_edit', {'id': pessoa.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">Nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pessoas) }}
    </div>
    <a class="btn btn-dark btn-rounded" href="{{ path('user_new') }}">Cadastrar</a>
{% endblock %}