{% extends 'layout-admin.html.twig' %}

{% block title %}Novo Usuario{% endblock %}

{% block body %}
    <h1>Novo cadastro de usu√°rios</h1>

    {{ include('user/_form.html.twig') }}

    <a href="{{ path('user_index') }}">back to list</a>
{% endblock %}

{% block extrajavascript %}
<script type="text/javascript">
    $(document).ready( function() {
        // Ao mudar o estado, busca as cidades referentes ao estado selecionado
        $("#user_fkEstadoId").on('change', function(){

            $.ajax({
                type: "POST",
                url: "{{ path('pessoa_lista_cidades') }}",
                cache: false,
                data: {
                    'estadoId': this.value
                }
            }).done(function(cities) {

                let options = '';
                $.each(cities, function(i, item){
                    options += '<option value="'+item['id']+'">'+item['nome']+'</option>';
                });
                
                $("#user_fkCidadeId").empty().append(options);

            }).fail(function(){
                console.log( 'Falha ao buscar as cidades.' );
            });

        });
    });
</script>
{% endblock %}