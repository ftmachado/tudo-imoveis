<form method="post" class="pull-right" action="{{ path('bairro_delete', {'id': bairro.id}) }}" onsubmit="return confirm('Tem certeza que quer deletar??');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bairro.id) }}">
    <button class="btn btn-danger btn-rounded">Deletar</button>
</form>
