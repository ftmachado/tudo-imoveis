<form method="post" action="{{ path('bairro_delete', {'id': bairro.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bairro.id) }}">
    <button class="btn">Delete</button>
</form>
