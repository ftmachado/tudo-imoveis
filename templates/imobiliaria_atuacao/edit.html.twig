{% extends 'layout-admin.html.twig' %}

{% block breadcrumb %}Atualizar local de atuação{% endblock %}

{% block body %}
    <h3>Atualizar local de atuação</h3>
    {{ include('imobiliaria_atuacao/_delete_form.html.twig') }}
    <br>

    {{ include('imobiliaria_atuacao/_form.html.twig', {'button_label': 'Atualizar'}) }}

    <a class="btn btn-default btn-rounded" href="{{ path('imobiliaria_atuacao_index') }}">Voltar</a>

{% endblock %}

{% block extrajavascript %}
<script type="text/javascript">
    $(document).ready( function() {
        
        $("#imobiliaria_atuacao_fkEstadoId").on('change', function(){

            $.ajax({
                type: "POST",
                url: "{{ path('pessoa_lista_cidades') }}",
                cache: false,
                data: {
                    'estadoId': this.value
                }
            }).done(function(cities) {

                let options = '';
                $.each(cities, function(i, item){
                    options += '<option value="'+item['id']+'">'+item['nome']+'</option>';
                });
                
                $("#imobiliaria_atuacao_fkCidadeId").empty().append(options);

            }).fail(function(){
                console.log( 'Falha ao buscar as cidades.' );
            });

        });

    });
</script>
{% endblock %}
