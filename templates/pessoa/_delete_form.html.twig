<form method="post" class="pull-right" action="{{ path('pessoa_delete', {'id': pessoa.id}) }}" onsubmit="return confirm('Tem certeza que quer deletar??');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pessoa.id) }}">
    <button class="btn btn-danger btn-rounded">Deletar</button>
</form>
