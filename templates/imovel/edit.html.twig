{% extends 'layout-admin.html.twig' %}

{% block title %}Edit Imovel{% endblock %}

{% block body %}
    <h1>Edit Imovel</h1>

    {{ include('imovel/_form.html.twig', {'button_label': 'Update'}) }}

    <form id="form-dropzone" action="{{ path('file_edit', {'id': app.request.get('id')} ) }}" class="dropzone">
        <div class="dz-default dz-message">
            <div class="dz-icon">
                <i class="ti-cloud-up icon-5x"></i>
            </div>
            <div>
                <span class="dz-text">Drop files to upload</span>
                <p class="text-sm text-muted">or click to pick manually</p>
            </div>
        </div>
        <div class="fallback">
            <input name="file" type="file" multiple>
        </div>
    </form>

    <button id="save" class="btn btn-primary" type="submit">{{ button_label|default('Save') }}</button>

    <a href="{{ path('imovel_index') }}">back to list</a>

    {{ include('imovel/_delete_form.html.twig') }}
{% endblock %}

{% block extrajavascript %}
<script type="text/javascript">

    /*
    * Fonte: https://github.com/enyo/dropzone/wiki/FAQ#how-to-show-files-already-stored-on-server
    */

    Dropzone.options.formDropzone = {
        maxFileSize : 4, //MB
        parallelUploads : 10,
        uploadMultiple: false,
        addRemoveLinks : true,
        acceptedFiles: ".jpg, .jpeg, .png, .gif",
        // resize: function(file) {
        //     return {
        //         srcX: 0,
        //         srcY: 0,
        //         srcWidth: file.width,
        //         srcHeight: file.height,
        //         trgWidth: 160,
        //         trgHeight: 120,
        //     };
        // },
        init: function() {

            var thisDropzone = this;

            $.getJSON("{{ path('file_edit', {'id': app.request.get('id')} )}}", function(data) {

                $.each(data, function(key,value){

                    console.log(value);

                    var mockFile = { name: value.name, size: value.size }; // here we get the file name and size as response 

                    thisDropzone.options.addedfile.call(thisDropzone, mockFile);

                    thisDropzone.options.thumbnail.call(thisDropzone, mockFile, value.file);

                });

            });
        }

    };

    $(document).ready( function() {

        $("#imovel_fkEstadoId").on('change', function(){

            $.ajax({
                type: "POST",
                url: "{{ path('pessoa_lista_cidades') }}",
                cache: false,
                data: {
                    'estadoId': this.value
                }
            }).done(function(cities) {

                let options = '';
                $.each(cities, function(i, item){
                    options += '<option value="'+item['id']+'">'+item['nome']+'</option>';
                });
                
                $("#imovel_fkCidadeId").empty().append(options);

            }).fail(function(){
                console.log( 'Falha ao buscar as cidades.' );
            });

        });

        $('#save').on('click', function(){
            $('#form-imovel').submit();
        });
        
    });
</script>
{% endblock %}