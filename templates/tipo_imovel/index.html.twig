{% extends 'layout-admin.html.twig' %}

{% block breadcrumb %}Tipo de Imóvel{% endblock %}

{% block body %}
    <h1>Tipo de Imóvel</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for tipo_imovel in tipo_imovels %}
            <tr>
                <td>{{ tipo_imovel.nome }}</td>
                <td>
                    <a href="{{ path('tipo_imovel_show', {'id': tipo_imovel.id}) }}">Visualizar</a>
                    <a href="{{ path('tipo_imovel_edit', {'id': tipo_imovel.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tipo_imovel_new') }}">Create new</a>
{% endblock %}
